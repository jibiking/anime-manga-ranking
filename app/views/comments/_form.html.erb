<div class="row mb-3">
  <div class="col-lg-8 offset-lg-2">
    <%= form_with(model: [@board, @comment], local: true) do |f| %>
      <%= f.label :body %>
      <%= f.text_area :body, class: 'form-control mb-3', row: '4', placeholder: 'コメント' %>
      <div class="actions">
        <%= f.submit '投稿', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
