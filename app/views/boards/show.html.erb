<div class="container pt-5">
  <div class="row mb-3">
    <div class="col-lg-8 offset-lg-2">
      <h1>作品詳細</h1>
      <!-- 作品内容 -->
      <article class="card">
        <div class="card-body">
          <div class='row'>
            <div class='col-md-3'>
              <%= image_tag @board.board_image.url, size: '300x200' %>
            </div>
            <div class='col-md-12'>
              <h3 style='display: inline;'><%= @board.title %></h3>
            </div>
          </div>
          <p><%= @board.body %></p>

          <%= render 'crud', board: @board %>

        </div>
      </article>
    </div>
  </div>

  <!-- コメントフォーム -->
  <%= render 'comments/form' %>

  <!-- コメントエリア -->
  <% @comments.each do |comment| %>
    <%= render 'comments/comments', comment: comment %>
  <% end %>

</div>