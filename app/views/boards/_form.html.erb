<%= form_with model: @board, class: new_board_path do |f| %>

  <% if @board.errors.any? %>
    <div id="error_explanation">
      <ul class="alert alert-danger">
        <% @board.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control', row: '10' %>
  </div>
  <div class="actions">
    <%= f.submit '追加する', class: 'btn btn-primary' %>
  </div>
<% end %>